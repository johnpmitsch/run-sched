<h1><%= @schedule.name %></h1>

<table class="table-bordered table-striped schedule-table">
  <tr>
    <td><b>Week</b></td>
    <td><b>Monday</b></td>
    <td><b>Tuesday</b></td>
    <td><b>Wednesday</b></td>
    <td><b>Thursday</b></td>
    <td><b>Friday</b></td>
    <td><b>Saturday</b></td>
    <td><b>Sunday</b></td>
  </tr>
  <% @schedule.weeks.order(:number).each do |week| %>
    <% if week.days.any? %>
    <tr>
      <td><b><%= week.number %></b></td>
      <% week.days.order(:date).each do |day| %>
      <td>
        <p><em><%= day.date.strftime('%m/%d') %></em></p>
        <p class="activity"><%= day.activity %></p>
      </td>
      <% end %>
    </tr>
    <% end %>
  <% end %>
</table>
    
<%= link_to 'Edit', edit_schedule_path(@schedule) %> |
<%= link_to 'Back', schedules_path %>
